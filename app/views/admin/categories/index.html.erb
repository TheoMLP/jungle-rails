<section class="index-products-index">

  <header class="page-header">
    <h1>All Categories - Admin Access</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th>Product nb</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <%= render 'category', category: category, product_nb: category::products.count %>
        <% end %>
      </tbody>
    </table>

  </div>

</section>
